{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile C++ (g++)",
            "type": "shell",
            "command": "g++",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out",
                "-std=c++17",
                "-g"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Run C++ Program",
            "type": "shell",
            "command": "${fileDirname}/${fileBasenameNoExtension}.out",
            "dependsOn": [
                "Compile C++ (g++)"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}
